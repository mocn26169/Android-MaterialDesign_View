<resources>

    <!-- 父主题 -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!-- 隐藏ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!-- 菜单栏颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--各控制元件的预设颜色-->
        <item name="colorControlNormal">@color/gray</item>
        <!--App的背景色-->
        <item name="android:windowBackground">@color/white</item>

    </style>

    <!-- 应用主题-->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- toolbar样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--默认背景颜色-->
        <item name="android:background">@color/colorPrimary</item>
        <!--标题文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--标题文字颜色-->
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="ToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- 字体大小 -->
        <item name="android:textSize">15sp</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/white</item>
        <!-- 字体样式 -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--默认背景颜色-->
        <item name="android:background">@color/white</item>
        <!--字体颜色-->
        <item name="android:textColor">@color/black</item>
        <!--设置溢出菜单样式-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!--溢出菜单样式-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!--y轴距离-->
        <item name="android:dropDownVerticalOffset">5dip</item>
        <!--x轴距离-->
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <!-- 子toolbar样式 -->
    <style name="ChildToolbarTheme" parent="@style/ToolbarTheme">
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <!-- 子toolbar标题样式 -->
    <style name="ChildToolbarTitleTheme" parent="@style/ToolbarTitleTheme">
        <!-- 字体大小 -->
        <item name="android:textSize">20sp</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/white</item>
        <!-- 字体样式 -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 子toolbar弹出菜单样式 -->
    <style name="ChildToolbarPopupTheme" parent="ToolbarPopupTheme">
        <!--设置溢出菜单样式-->
        <item name="actionOverflowMenuStyle">@style/ChildOverflowMenuStyle</item>
    </style>

    <!--子溢出菜单样式-->
    <style name="ChildOverflowMenuStyle" parent="@style/OverflowMenuStyle">
        <!--y轴距离-->
        <item name="android:dropDownVerticalOffset">0dip</item>
        <!--x轴距离-->
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <!--子溢出菜单按钮样式-->
    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more</item>
    </style>

</resources>
